<div class="container mt-12">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="blog-header-color">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="card-header">{{title}}</h5>
                        </div>
                        <div class="col-md-4 text-end">
                            <p class="mb-0">Posted by {{user.username}} on {{format_date date_created}}</p>
                        </div>
                    </div>
                </div>
                <div class="card-body blog-post-color">
                    <div class="mb-3">
                        <h6 class="text-start">{{content}}</h6>
                    </div>
                </div>
            </div>
        </div>        
    </div>
</div>


<div class="container mt-12">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <div class="card">
        <div class="blog-header-color">
          <div class="row">
            <div class="col-md-8">
              <h5 class="card-header">{{blogPost.title}}</h5>
            </div>
            <div class="col-md-4 text-end">
              <p class="mb-0">Posted by
                {{blogPost.user.username}}
                on
                {{format_date blogPost.date_created}}</p>
            </div>
          </div>
        </div>
        <div class="card-body blog-post-color">
          <div class="mb-3">
            <h6 class="text-start">{{blogPost.content}}</h6>
          </div>
        </div>
      </div>
      {{#each comments as |comment|}}
      <div class="card">
        <div class="blog-header-color">
          <div class="row">
            <div class="col-md-8 card-header">
            </div>
          </div>
        </div>
        <div class="card-body blog-post-color">
          <div class="">
            <p class="text-start">
            <br>
            {{comment.comment}}
            <br>
            - {{comment.user.username}}, {{format_date comment.date_created}}
            <p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

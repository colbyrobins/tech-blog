<div class="container mt-12">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <div class="card">
        <div class="blog-header-color">
          <div class="row">
            <div class="col-md-8">
              <h5 class="card-header" data-blog-id="{{blogPost.id}}">{{blogPost.title}}</h5>
            </div>
            <div class="col-md-4 text-end">
              <p class="mb-0">Posted by
                {{blogPost.user.username}}
                on
                {{format_date blogPost.date_created}}</p>
            </div>
          </div>
        </div>
        <div class="card-body blog-post-color">
          <div class="mb-3">
            <h6 class="text-start">{{blogPost.content}}</h6>
          </div>
        </div>
      </div>
      {{#each comments as |comment|}}
      <div class="card">
        <div class="blog-header-color">
          <div class="row">
            <div class="col-md-8">
              <h5 class="card-header" data-comment-id="{{comment.id}}"></h5>
            </div>
            <div class="col-md-4 text-end">
              <p class="mb-0">
            </div>
          </div>
        </div>
        <div class="card-body blog-post-color">
          <div class="mb-3">
            <p class="text-start">
              <br>
              {{comment.comment}}
              <br>
              - {{comment.user.username}}, {{format_date comment.date_created}}
            </p>
          </div>
        </div>
      </div>
      {{/each}}
      {{#if loggedIn}}
      <div class="card">
        <div class="blog-header-color">
          <div class="row">
            <div class="col-md-8">
              <h5 class="card-header"></h5>
            </div>
          </div>
        </div>
        <div class="card-body blog-post-color">
          <div class="mb-3">
            <h6 class="text-start">Comment</h6>
            <textarea class="form-control" id="commentInput" rows="4"></textarea>
          </div>
          <div class="text-center">
            <button 
              class="btn col-md-12 bg-secondary text-white"
              id="createCommentBtn"> 
              Submit
            </button>
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>
<script src="/js/comment.js"></script>